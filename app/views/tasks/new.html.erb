<h1> Create a New task:<h1> 

<% if flash[:errors] %>
<ul>

<% flash[:errors].each do |message| %> 
    <li>%= message %><li>
    <% end%> 
    <ul> 
    <% end %> 

<%= form_with model: @task do |f| %>
    <%= f.label :name %> 
    <%= f.text_field :name %> 
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
    <%= f.collection_select :programmer_id, Programmer.all, :id, :name %>
    <%= f.submit "Deploy More Labs!" %>
    <% end%> 

    <br><br> 
